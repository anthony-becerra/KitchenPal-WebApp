@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="bg-faded p-4 my-4">
        <h1 class="text-center my-0">
            Home Page
        </h1>
        <hr class="divider">
        <p class="text-center">User's favorite recipes will be here.</p>
    </div>
</div>

<div class="container bg-faded p-4 my-4 col-sm-8 col-sm-push-2 col-sm-pull-2">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/images/chicken-parmesan-sm.jpg" alt="Chicken Parm">
                <div class="carousel-caption">
                    <h3>Chicken Parmesan</h3>
                    <p><a href="#">Link to recipe!></a></p>
                </div>
            </div>

            <div class="item">
                <img src="~/images/chicken-alfredo-sm.jpg" alt="Chicken Alfredo">
                <div class="carousel-caption">
                    <h3>Chicken Alfredo</h3>
                    <p><a href="#">Link to recipe!</a></p>
                </div>
            </div>

            <div class="item">
                <img src="~/images/ribeye-steak-sm.jpg" alt="Ribeye Steak">
                <div class="carousel-caption">
                    <h3>Ribsteak Eye</h3>
                    <p><a href="#">Link to recipe!</a></p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>